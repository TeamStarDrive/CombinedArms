<Weapon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Tag_Kinetic>true</Tag_Kinetic>
  <Tag_Energy>false</Tag_Energy>
  <Tag_Guided>false</Tag_Guided>
  <Tag_Missile>false</Tag_Missile>
  <Tag_Hybrid>false</Tag_Hybrid>
  <Tag_Beam>false</Tag_Beam>
  <Tag_Intercept>false</Tag_Intercept>
  <Tag_Explosive>true</Tag_Explosive>
  <Tag_Bomb>false</Tag_Bomb>
  <Tag_BioWeapon>false</Tag_BioWeapon>
  <Tag_Warp>false</Tag_Warp>
  <Tag_Subspace>false</Tag_Subspace>
  <Tag_Drone>false</Tag_Drone>
  <Tag_Torpedo>false</Tag_Torpedo>
  <Tag_Cannon>true</Tag_Cannon>

  <UID>platformkineticW3</UID>
  <fireDelay>6</fireDelay>
  <Range>10000</Range>
  <OrdinanceRequiredToFire>3.5</OrdinanceRequiredToFire>

  <!-- name of XACT audio cue to play on firing this weapon -->
  <fireCueName>sd_weapon_flakcannon_01</fireCueName>
  <dieCue>sd_weapon_flakcannon_explode_01</dieCue>
  <InFlightCue>sd_weapon_photon_flight_01</InFlightCue>
  
  <!-- Projectile Information -->
  <DamageAmount>350</DamageAmount>
  <MuzzleFlash>Yes</MuzzleFlash>
  <ProjectileSpeed>3000</ProjectileSpeed>
  <SalvoCount>4</SalvoCount>
  <SalvoTimer>1</SalvoTimer>
  <FireCone>1</FireCone>

  <!-- Animation Information -->
  <Light>Blue</Light>
  <Scale>1.3</Scale>

  <!-- Explosion Information -->
  <explodes>true</explodes>
  <DamageRadius>36</DamageRadius>

  <ProjectileTexturePath>projLong_01_red</ProjectileTexturePath>
  <ModelPath>projLong</ModelPath>
  <ModelPath>projBall</ModelPath>
  <WeaponType>Ballistic Cannon</WeaponType>
  <WeaponEffectType>SmokeTrail</WeaponEffectType>  
</Weapon>